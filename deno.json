{
  "name": "@grammy-cli/grammy-cli",
  "version": "0.0.0",
  "exports": {
    ".": "./src/mod.ts",
    "./cli": "./src/cli.ts"
  },
  "tasks": {
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test",
    "check": "deno check src/cli.ts",
    "ok": "deno fmt && deno lint && deno test && deno check src/cli.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100
  },
  "compilerOptions": {
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "lib": ["deno.ns", "deno.console", "deno.net", "dom"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.15",
    "@std/fs": "jsr:@std/fs@1.0.19",
    "@std/path": "jsr:@std/path@1.1.2",
    "commander": "npm:commander@14.0.1",
    "prompts": "npm:@inquirer/prompts@7.8.6",
    "eta": "npm:eta@4.0.1"
  },
  "exclude": [
    "./node_modules/",
    "./dist/",
    "./coverage/"
  ]
}
